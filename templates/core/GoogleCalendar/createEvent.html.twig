{% extends 'panel.html.twig' %}
{% block stylesheets %} {#{{ parent() }}#}
    {{ block("stylesheets", "_modules/_dateTimePicker.html.twig") }}
    {{ block("stylesheets", "_modules/_googleCalendar.html.twig") }}
{% endblock %}
{% block javascripts_bottom %} {#{{ parent() }}#}
    {{ block("javascripts_bottom", "_modules/_dateTimePicker.html.twig") }}
    {{ block("javascripts_bottom", "_modules/_googleCalendar.html.twig") }}
    {{ block("javascripts_bottom_create", "_modules/_googleCalendar.html.twig") }}
{% endblock %}
{% block body %} {{ parent() }}

     <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.1.9/jquery.datetimepicker.min.css" />

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.1.9/jquery.datetimepicker.min.js"></script>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div id="form-container">
                        <h3 class="text-center text-black">Utwórz nowe wydarzenie</h3>
                        <input class="form-control" type="text" id="event-title" placeholder="Tytuł" autocomplete="off" />
                        <select class="custom-select" id="event-type"  autocomplete="off">
                            <option value="FIXED-TIME">Określony czas</option>
                            <option value="ALL-DAY">Wydarzenie całodniowe</option>
                        </select>
                        <hr />
                        <input class="form-control" type="text" value="" id="event-start-time" placeholder="Data rozpoczęcia" autocomplete="off" />
                        <input class="form-control" type="text" id="event-end-time" placeholder="Data zakończenia" autocomplete="off" />
                        <input class="form-control" type="text" id="event-date" placeholder="Event Date" autocomplete="off" />
                        <button class="btn btn-primary" id="create-update-event" data-operation="create" data-event-id="">Utwórz wydarzenie</button>
                        <button class="btn btn-danger" id="delete-event" style="display:none">Delete Event</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="snackbar">message..</div>

{% endblock %}