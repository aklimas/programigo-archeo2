<form method="post" action="{{ path('user_delete', {'id': app.request.get('user').id}) }}" onsubmit="return confirm('Czy napewno usunać nieodwracalnie użytkownika?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.request.get('user').id) }}">
    <button class="nav-link text-danger">{% trans %}Usuń użytkownika{% endtrans %}</button>
</form>
