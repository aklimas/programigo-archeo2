<div class="row">
    <div class="col-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Dodaj wpis <span></span></h5>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">{{ form_row(form.title) }}</div>
                    <div class="col">{{ form_row(form.status) }}</div>
                </div>
                <div class="border mt-2 p-2">
                    {{ form_row(form.subject) }}
                    {{ form_row(form.content) }}
                </div>
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-sm btn-primary mt-2">{{ button_label|default('Zapisz') }}</button>

                {% if emailTemplate.id is not null %}
                    <a href="{{ path('emailTemplate_sendTestEmail', {'id': emailTemplate.id }) }}" type="button"
                       class="btn btn-sm btn-success mt-2">Wy≈õlij testowo</a>
                {% endif %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>